<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.terminal.PasswordRecoveryController">
   <children>
      <Label alignment="CENTER" layoutY="50.0" prefHeight="80.0" prefWidth="600.0" text="Password Recovery" textFill="#666666">
         <font>
            <Font name="Calibri" size="60.0" />
         </font>
      </Label>
      <Text layoutX="150.0" layoutY="185.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <TextField fx:id="passwordRecoveryUsername" editable="false" layoutX="150.0" layoutY="191.0" prefHeight="50.0" prefWidth="300.0">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Label fx:id="passwordRecoveryError" alignment="CENTER" layoutX="-1.0" layoutY="325.0" prefHeight="30.0" prefWidth="600.0" textFill="RED">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="passwordRecoverySuccess" alignment="CENTER" layoutY="325.0" prefHeight="30.0" prefWidth="600.0" textFill="LIME">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button layoutX="230.0" layoutY="355.0" mnemonicParsing="false" onAction="#recovery" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: #ccc;" text="Recovery">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="14.0" layoutY="536.0" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #ccc;" text="Back">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField fx:id="passwordRecoveryEmail" layoutX="150.0" layoutY="275.0" prefHeight="50.0" prefWidth="300.0">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Text layoutX="150.0" layoutY="269.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email Address">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
